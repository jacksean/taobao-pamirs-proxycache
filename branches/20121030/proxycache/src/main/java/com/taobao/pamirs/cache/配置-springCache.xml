<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">

	<bean class="com.taobao.pamirs.cache.framework.aop.handle.CacheManagerHandle">
		<property name="cacheManager" ref="cacheManager" />
	</bean>

	<bean id="cacheManager" class="com.taobao.pamirs.cache.CacheManager" init-method="init">
		<property name="cacheConfigService" ref="cacheConfigService" />
	</bean>

	<bean id="cacheConfigService" class="com.taobao.pamirs.cache.load.impl.LocalConfigServiceImpl">
		<property name="storeType" value="tair/map" />
		<property name="storeTairNameSpace" value="318" /><!-- just for tair -->
		<property name="storeMapCleanTime" value="0 * * * * ? *" /><!-- just for map -->
		<property name="storeRegion" value="${store.tair.region}" /><!-- 环境分区，可选 -->
		<property name="cacheConfigResources">
			<list>
				<value>classpath:配置-beanCache.xml</value>
				<value>file:/home/admin/b.xml</value>
			</list>
		</property>
	</bean>
	
	<!-- 见：配置-beanCache.xml 示例文件 -->

</beans>